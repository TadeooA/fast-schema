{
  "name": "@tadeoa/fast-schema",
  "version": "0.1.0-alpha.1",
  "description": "Ultra-performance schema validation library - 10-100x faster than Zod with optimized 'fast' API",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "pkg/**/*"
  ],
  "scripts": {
    "build": "npm run build:wasm && npm run build:ts",
    "build:ts-only": "npm run build:ts",
    "build:wasm": "cd .. && wasm-pack build --target bundler --out-dir js/pkg",
    "build:ts": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "type-check": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "benchmark": "node dist/benchmarks/cli.js",
    "benchmark:build": "npm run build && npm run benchmark",
    "benchmark:legacy": "node ../benchmarks/vs-zod.js",
    "benchmark:comprehensive": "node ../benchmarks/comprehensive.js",
    "benchmark:zod": "node dist/benchmarks/run-zod-benchmark.js",
    "benchmark:ajv": "node dist/benchmarks/run-ajv-benchmark.js",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "schema",
    "validation",
    "typescript",
    "zod",
    "fast",
    "wasm",
    "rust",
    "performance",
    "json",
    "validator"
  ],
  "author": "Juan Tadeo <tadeoaragoon@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/TadeooA/fast-schema.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "eslint": "^8.0.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0",
    "zod": "^3.22.0"
  },
  "peerDependencies": {
    "typescript": ">=4.5.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
